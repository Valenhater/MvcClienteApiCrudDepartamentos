@model IEnumerable<MvcClienteApiCrudDepartamentos.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Departamentos" asp-action="Create" class="btn btn-outline-success">
    Create
</a>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
               <a asp-controller="Departamentos" asp-action="Details" asp-route-id="@item.idDepartamento" class="btn btn-outline-success">
                   Detalle
               </a>
                <a asp-controller="Departamentos" asp-action="Edit" asp-route-id="@item.idDepartamento" class="btn btn-outline-warning">
                   Edit
               </a>
                <a asp-controller="Departamentos" asp-action="Delete" asp-route-id="@item.idDepartamento" class="btn btn-outline-danger">
                   Eliminar
               </a>
            </td>
        </tr>
}
    </tbody>
</table>
